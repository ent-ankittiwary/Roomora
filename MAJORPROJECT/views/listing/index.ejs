<!-- //using layout of ejsmate-->
<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <h3>All Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">

        <% for (let list of allListing) { %>
        <div class="col mb-4"> <!--Make each card inside a col-->
            <a href="/listings/<%= list._id %>" class="listing-link">
                <div class="card col listingcard">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="list_image" style="height:20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= list.title %></b><br>
                            <nbsp><nbsp></nbsp>  &#8377;<%= Number(list.price).toLocaleString("en-IN") %>/night
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</body>
